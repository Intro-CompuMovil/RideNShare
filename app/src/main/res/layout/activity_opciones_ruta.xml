<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logica.PublicacionesActivity"
    android:background="@color/background"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escoge una opciÃ³n"
        android:textSize="40sp"
        android:fontFamily="@font/londrina_solid_black"
        android:textColor="@color/letras"
        android:gravity="center_horizontal"
        android:layout_above="@+id/buttonsLayout"
        android:layout_marginBottom="20dp"
        />


    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/buttonTiempoReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Tiempo real"
            android:background="@drawable/rounded_corner_button"
            app:backgroundTint="@color/letras"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/buttonDesdeMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Desde mapa"
            android:background="@drawable/rounded_corner_button"
            app:backgroundTint="@color/letras"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


</RelativeLayout>