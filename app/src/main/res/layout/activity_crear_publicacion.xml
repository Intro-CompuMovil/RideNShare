<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="12"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    android:paddingBottom="28dp"
    android:paddingTop="0dp"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tituloBienvenidos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/londrina_solid_black"
        android:text="Crear publicación"
        android:textColor="@color/letras"
        android:textSize="48sp"
        android:gravity="center"

        />

    <RelativeLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_layout"
        >


        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Título"
            android:textSize="16sp"
            android:textColor="@color/letras"
            android:layout_alignParentTop="true"
            />

        <EditText
            android:id="@+id/editTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner_layout"
            android:fontFamily="@font/roboto"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/letras"
            android:textColorHint="@color/letras"
            android:layout_below="@+id/textTitulo"
            />

        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Descripción"
            android:textSize="16sp"
            android:textColor="@color/letras"
            android:layout_below="@id/editTitulo"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/editDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner_layout"
            android:fontFamily="@font/roboto"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/letras"
            android:textColorHint="@color/letras"
            android:layout_below="@+id/textDescripcion"
            />

        <TextView
            android:id="@+id/textFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Foto"
            android:textSize="16sp"
            android:textColor="@color/letras"
            android:layout_below="@id/editDescripcion"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/fotoPlaceholder"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="5"
            android:src="@drawable/camera"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:layout_below="@id/textFoto"
            />

        <LinearLayout
            android:id="@+id/botones"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:weightSum="9"
            android:layout_below="@+id/fotoPlaceholder"
            >

            <Button
                android:id="@+id/buttonGallery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Galería"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/buttonCamera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Cámara"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Fecha de publicación"
            android:textSize="16sp"
            android:textColor="@color/letras"
            android:layout_below="@id/botones"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/editFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha (dd/mm/yyyy)"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner_layout"
            android:fontFamily="@font/roboto"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/letras"
            android:textColorHint="@color/letras"
            android:layout_below="@+id/textFecha"
            />



        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear publicacion"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_button"
            app:backgroundTint="@color/letras"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0"
        />




</LinearLayout>