<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/publicacion_border"
    >

    <TextView
        android:id="@+id/amigo_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Nombre Placeholder" />

    <TextView
        android:id="@+id/amigo_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo Placeholder"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/amigo_ciudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ciudad Placeholder"
        android:textSize="14sp" />
</LinearLayout>